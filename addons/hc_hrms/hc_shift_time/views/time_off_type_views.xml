<odoo>
    <data>
        <record id="hr_leave_type_view_form_hc_shift_time" model="ir.ui.view">
            <field name="name">hr.leave.type.view.form.hc.shift.time</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='responsible_id']" position="after">
                    <field name="pay_type"/>
                    <field name="include_to_net_working"/>
                    <field name="is_compensatory_timeoff_type"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
