<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_employee_resignation_form" model="ir.ui.view">
            <field name="name">inherit_employee_resignation_form</field>
            <field name="model">hr.resignation</field>
            <field name="inherit_id" ref="hr_resignation.employee_resignation_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//header" position="inside">
                        <button type="object" name="action_create_gratuity" attrs="{'invisible': [('|'),('state', '!=', 'approved'), ('gratuity_id', '!=', False)]}" string="Create Gratuity" />
                    </xpath>
                    <xpath expr="//field[@name='notice_period']" position="after">
                        <field name="gratuity_id" readonly="1" attrs="{'invisible': [('gratuity_id', '=', False)]}"/>
                    </xpath>

                </field>
        </record>
    </data>
</odoo>