<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->



        <record id="view_move_form_disable_edit" model="ir.ui.view">
            <field name="name">view_move_form_disable_edit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="groups_id" eval="[(4, ref('budget_approval.disable_edit_journal_entries'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="edit">0</attribute>
                </xpath>
            </field>
        </record>

         <record id="view_inherit_purchase_order_form_allow" model="ir.ui.view">
            <field name="name">view_inherit_purchase_order_form_allow</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="groups_id" eval="[(4, ref('budget_approval.edit_purchase_order_price'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_inherit_purchase_order_form" model="ir.ui.view">
            <field name="name">view_inherit_purchase_order_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='account_analytic_id']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="before">
                    <field name="remain_amount" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="approval_user_id" force_save="1" readonly="1"/>
                    <field name="login_is_approval" invisible="1"/>
                </xpath>

                <xpath expr="//header/button[@name='button_confirm']" position="attributes">
                    <attribute name="states"/>
                    <attribute name="attrs">{'invisible':['|',('login_is_approval','=',False),('state','not in',('sent'))]}</attribute>
                </xpath>
                 <xpath expr="//header/button[@name='button_confirm'][2]" position="attributes">
                    <attribute name="states"/>
                    <attribute name="class">oe_highlight oe_read_only</attribute>
                    <attribute name="attrs">{'invisible':['|','|',('id','=',False),('login_is_approval','=',False),('state','not in',('draft'))]}</attribute>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>