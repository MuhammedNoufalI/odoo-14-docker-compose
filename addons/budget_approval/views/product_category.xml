<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="inherit_product_category_form_view" model="ir.ui.view">
        <field name="name">inherit_product_category_form_view</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="is_budget_approval" />
                <field name="budget_type" />
                <field name="budget_percentage" attrs="{'invisible': [('budget_type', '!=', 'percent')]}" />
                <field name="analytic_account" />
            </field>
        </field>
    </record>
</odoo>