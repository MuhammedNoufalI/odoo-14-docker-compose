<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pos_order_excel_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Pos Order</field>
        <field name="res_model">pos.order.mrp.excel.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="pos_order_excel_report_wizard_form_view" model="ir.ui.view">
        <field name="name">Pos Order Form</field>
        <field name="model">pos.order.mrp.excel.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate" name="fetch_report_from_order" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="pos_order_excel_report_menutem"
        name="POS Order Report"
        parent="point_of_sale.menu_point_rep"
        sequence="30"
        action="pos_order_excel_report_wizard_action"
    />
</odoo>