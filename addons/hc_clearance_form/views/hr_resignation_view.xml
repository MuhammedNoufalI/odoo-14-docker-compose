<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_employee_resignation_clearance_form" model="ir.ui.view">
            <field name="name">inherit_employee_resignation_clearance_form</field>
            <field name="model">hr.resignation</field>
            <field name="inherit_id" ref="hr_resignation.employee_resignation_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='confirm_resignation']" position="after">
                    <button name="create_clearance_form" string="Create Clearance" type="object"
                            attrs="{'invisible': ['|',('clearance_id', '!=', False),('state', '=', 'cancel')]}"/>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="clearance_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>