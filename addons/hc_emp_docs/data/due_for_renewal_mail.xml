            <field name="body_html">
                <![CDATA[
<p>Hi,</p>This Email Is To Remind You That Following Documents Are Due On Today.<br><br>
<table width="771" cellspacing="1" cellpadding="4" border="1" height="73">
    <tbody>
        <tr style="font-weight:bold;">
            <th style="background-color:#9b9da0 !important;">Document Type</th>
            <th style="background-color:#9b9da0 !important;">Document Number</th>
            <th style="background-color:#9b9da0 !important;">Expiry Date</th>
        </tr>
        % if ctx.get('doc_details_list'):
        	% for values in ctx['doc_details_list']
		        <tr>
		            <td valign="middle" align="center">${values['doc_type']}</td>
		            <td valign="middle" align="center">${values['doc_num']}</td>
		            <td valign="middle" align="center">${values['expiry']}<br></td>
		        </tr>
       	 	% endfor
       	 % endif
    </tbody>
</table><br>
]]></field>
        </record>
    </data>
</odoo>
