<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_config_settings" model="ir.ui.view">
            <field name="name">Hr settings</field>
            <field name="model">hr.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure HR" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                    </header>
                    <group string="Start and Renew Contract" name="contract_date">
                        <field name="trail_days"/>
                        <field name="renew_days"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="inherit_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">inherit_res_config_settings_view_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                    <h2>From &amp; To Dates</h2>
                    <div class="row mt16 o_settings_container" id="from_and_to_dates">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_hr_payroll_account" string="From (Day)"/>
                                <div class="text-muted">
                                    From (Day)
                                </div>
                                <field name="payroll_from_day"/>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 o_setting_box" attrs="{'invisible': [('module_hr_payroll_account', '=', False)]}">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_hr_payroll_account_sepa" string="From (Month)"/>
                                <div class="text-muted">
                                    From (Month)
                                </div>
                                <field name="payroll_from_month"/>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_hr_payroll_account" string="To (Day)"/>
                                <div class="text-muted">
                                    To (Day)
                                </div>
                                <field name="payroll_to_day"/>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 o_setting_box" attrs="{'invisible': [('module_hr_payroll_account', '=', False)]}">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_hr_payroll_account_sepa" string="To (Month)"/>
                                <div class="text-muted">
                                    To (Month)
                                </div>
                                <field name="payroll_to_month"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_hr_config" model="ir.actions.act_window">
            <field name="name">Configure HR</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_hr_config" name="Settings" parent="hr.menu_human_resources_configuration"
            sequence="0" action="action_hr_config" groups="base.group_system"/>
    </data>
</odoo>
