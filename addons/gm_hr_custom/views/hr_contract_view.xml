<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="hr_contract_form_view_001" model="ir.ui.view">
            <field name="name">hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='structure_type_id']" position="after">
                    <field name="struct_id" string="Salary Structure" />
                </xpath>
                <xpath expr="//field[@name='wage']" position="replace">
                    <field name="wage" string="Gross"/>
                </xpath>
                <xpath expr="//field[@name='wage']" position="after">
                    <field name="additional" string="Additional" invisible="1"/>
                    <field name="net_salary" invisible="1"/>
                    <field name="fixed_salary" invisible="1"/>
                    <field name="variable_salary" invisible="1"/>
                    <field name="freelancer_loc" invisible="1"/>
                    <field name="freelancer_inter" invisible="1"/>
                </xpath>

            </field>
        </record>



    </data>
</odoo>
