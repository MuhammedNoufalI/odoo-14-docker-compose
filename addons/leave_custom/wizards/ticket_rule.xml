<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record model="ir.ui.view" id="ticket_rule_form">
        <field name="name">ticket.rule.form</field>
        <field name="model">ticket.rule</field>
        <field name="arch" type="xml">
            <form >
                <group >
                    <group >
                        <field name="payslip_id" required="1" domain="[('state','in',['draft','verify']),('employee_id','=',employee_id)]"/>
                        <field name="employee_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="ticket_rate" readonly="1"/>
                        <field name="ticket_price"/>
                    </group>
                </group>
                <footer>
                    <button name="apply" string="Apply" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>



</odoo>