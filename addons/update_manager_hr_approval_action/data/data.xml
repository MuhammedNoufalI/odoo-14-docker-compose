<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
        <record model="ir.actions.server" id="hr_holidays.action_manager_approval">
            <field name="name">Manager Approval</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="binding_model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    for rec in records:
                        rec.action_approve()
            </field>
        </record>
        <record model="ir.actions.server" id="hr_holidays.action_hr_approval">
            <field name="name">HR Approval</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="binding_model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    for rec in records:
                        rec.action_validate()
            </field>
        </record>
</odoo>