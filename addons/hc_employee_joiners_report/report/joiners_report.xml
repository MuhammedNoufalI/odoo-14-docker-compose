<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="paperformat_report_landscape" model="report.paperformat">
        <field name="name">PF Joiners Landscape</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">90</field>
    </record>

    <record id="print_joiners_report_pdf" model="ir.actions.report">
        <field name="name">Joiners Report</field>
        <field name="model">hr.joiners.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="print_report_name">'Joiners Report - %s' %(object.to_date) </field>
        <field name="paperformat_id" ref="hc_employee_joiners_report.paperformat_report_landscape"/>
        <field name="report_name">hc_employee_joiners_report.joiners_report_template</field>
        <field name="report_file">hc_employee_joiners_report.joiners_report_template</field>
    </record>

</odoo>

