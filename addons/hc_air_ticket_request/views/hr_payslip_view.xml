<odoo>
    <record id="hr_payslip_inherit_ticket_amount" model="ir.ui.view">
        <field name="name">hr.payslipinheri.ticket.amount</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit_note']" position="after">
                <field name="ticket_amount" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>