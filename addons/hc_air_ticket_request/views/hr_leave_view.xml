<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_view_form_dashboard_inherit_hc_air_ticket" model="ir.ui.view">
        <field name="name">hr.leave.view.form.hc.ticket</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Ticket Request" name="ticket_request" type="object"
                        attrs="{'invisible': ['|',('state', 'in', ['confirm']),('ticket_request_id','!=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="ticket_request_id" invisible="1"/>
            </xpath>
            <xpath expr="//sheet/div[@class='alert alert-info']" position="before">
                <div name="button_box" class="oe_button_box">
                    <button type="action"
                            name="%(hc_air_ticket_request.air_ticket_request_action_form_window)d"
                            class="oe_stat_button"
                            icon="fa-ticket" string="Ticket Request"
                            attrs="{'invisible': [('ticket_request_id','=',False)]}">
                    </button>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
