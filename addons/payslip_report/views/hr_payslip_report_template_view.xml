<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_payslip_report_template_tree" model="ir.ui.view">
            <field name="name">hr.payslip.report.template.tree</field>
            <field name="model">hr.payslip.report.template</field>
            <field name="arch" type="xml">
                <tree string="Payslip Report Template">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        <record id="hr_payslip_report_template_form" model="ir.ui.view">
            <field name="name">hr.payslip.report.form</field>
            <field name="model">hr.payslip.report.template</field>
            <field name="arch" type="xml">
                <form string="Payslip Report Template">
                    <group col="4">
                        <field name="name" colspan="2"/>
                        <field name="description" colspan="2"/>
                    </group>
                    <notebook>
                        <page string="Salary Rules">
                            <field name="salary_rule_ids" colspan="4" nolabel="1"/>
                        </page>

                        <page string="Employees">
                            <field name="employee_ids" colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="hr_payslip_report_template_action" model="ir.actions.act_window">
            <field name="name">Payslip Report Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payslip.report.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="hr_payslip_report_template_action"
                  name="Payslip Report Template"
                  id="hr_payslip_report_template_menu"
                  parent="hr_work_entry_contract.menu_hr_payroll_configuration" />
    </data>
</odoo>
