<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- journal entry Inherit Form View to Modify it -->
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view.sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="client_order_ref"  position="attributes">
                    <attribute name="required">1</attribute>
                    <attribute name="string">Partner Ref</attribute>
                </field>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="client_order_ref"  position="move"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='discount']" position="before">
                    <field name="discount_amt"
                    groups="product.group_discount_per_so_line" optional="show"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
