<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- journal entry Inherit Form View to Modify it -->
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">


                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="refund_reason_id"
                           attrs="{'required': [('move_type', 'in', ('in_refund', 'out_refund'))],'invisible': [('move_type', 'not in', ('in_refund', 'out_refund'))]}"/>
                    <field name="partner_ref"/>
                </xpath>

                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="related_purchase_order_id" domain="[('partner_id','=',partner_id)]"
                           attrs="{'invisible':[('move_type','not in',['in_refund'])],'readonly':[('state','=','posted')]}"/>
                    <field name="related_sale_order_id" domain="[('partner_id','=',partner_id)]"
                           attrs="{'invisible':[('move_type','not in',['out_refund'])],'readonly':[('state','=','posted')]}"/>
                    <field name="transfer_back_ids" widget="many2many_tags"
                           attrs="{'invisible':[('move_type','not in',['out_refund','in_refund'])],'readonly':[('state','=','posted')]}"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_open_related_transfer" class="oe_stat_button" icon="fa-bars" type="object"
                            attrs="{'invisible': ['|',('transfer_back_ids','=',False),('move_type','in',['in_invoice','out_invoice'])]}"
                            string="Transfer">
                    </button>
                </xpath>
                <xpath expr="//button[@name='action_post'][2]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', ('state', 'not in', ['draft','transferred']),
                        ('auto_post', '=', True), ('move_type', '=', 'entry')]}
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="attrs">{'invisible' : ['|', ('id', '=', False), ('state', 'not in',
                        ['draft','transferred'])]}
                    </attribute>
                </xpath>


            </field>
        </record>
        <!-- journal entry Inherit Form View to Modify it -->
        <record id="account_invoice_form" model="ir.ui.view">
            <field name="name">view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="sale.account_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_user_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="invoice_user_id" position="move"/>

                    <field name="team_id" position="move"/>

                </xpath>


            </field>
        </record>
        <record id="model_account_reset_to_draft" model="ir.actions.server">
            <field name="name">Reset To Draft</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    for rec in records:
                        action = rec.button_draft()
            </field>
        </record>
         <record id="model_account_button_cancel" model="ir.actions.server">
            <field name="name">Cancel</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    for rec in records:
                        action = rec.button_cancel()
            </field>
        </record>
        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name">account.move.filter</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="line_ids" string="Label"
                           filter_domain="[('line_ids.name', 'ilike', self)]"/>
                </field>
            </field>
        </record>




    </data>
</odoo>
