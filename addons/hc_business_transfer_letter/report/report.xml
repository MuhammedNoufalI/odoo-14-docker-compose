<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_new_custom" model="report.paperformat">
        <field name="name">US Letter</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">25</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_hc_business_transfer_letter_form" model="ir.actions.report">
        <field name="name">Business Transfer Letter</field>
        <field name="model">business.transfer.letter</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hc_business_transfer_letter.report_transfer_letter</field>
        <field name="report_file">hc_business_transfer_letter.report_transfer_letter</field>
        <field name="binding_model_id" ref="hc_business_transfer_letter.model_business_transfer_letter"/>
        <field name="paperformat_id" ref="hc_business_transfer_letter.paperformat_new_custom"/>
        <field name="binding_type">report</field>
    </record>
</odoo>