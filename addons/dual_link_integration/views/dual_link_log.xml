<odoo>
    <record id="view_dual_link_log_form" model="ir.ui.view">
        <field name="name">view.dual_link_log.form</field>
        <field name="model">dual.link.log</field>
        <field name="arch" type="xml">
            <form string="Dual Link Log">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="message"/>
                        <field name="is_order"/>
                        <field name="api_obj"/>
                        <field name="payment_obj"/>
                    </group>
                    <notebook>
                        <page name="orders" string="Pos Orders" attrs="{'invisible': [('is_order', '=', False)]}">
                            <field name="order_ids" />
                        </page>
                        <page name="order_lines" string="Pos Orders Lines" attrs="{'invisible': [('is_order', '=', False)]}">
                            <field name="line_ids" />
                        </page>
                        <page name="api_lines" string="API Lines" attrs="{'invisible': [('is_order', '=', False)]}">
                            <field name="api_lines">
                                <tree>
                                    <field name="name" />
                                    <field name="product_id" />
                                    <field name="product_name" />
                                    <field name="product_ref" />
                                    <field name="format_name" />
                                    <field name="qty" />
                                    <field name="price" />
                                    <field name="total_price" />
                                    <field name="is_cloned" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_dual_link_log_tree" model="ir.ui.view">
        <field name="name">view.dual_link_log.tree</field>
        <field name="model">dual.link.log</field>
        <field name="arch" type="xml">
            <tree string="Dual Link Log">
                <field name="name"/>
                <field name="message"/>
                <field name="is_order"/>
            </tree>
        </field>
    </record>
    <record id="action_dual_link_log_view" model="ir.actions.act_window">
        <field name="name">Dual Link Log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dual.link.log</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>