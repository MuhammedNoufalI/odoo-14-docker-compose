    <record id="view_dual_link_form" model="ir.ui.view">
        <field name="name">view_dual_link_form</field>
        <field name="model">dual.link</field>
        <field name="arch" type="xml">
            <form string="Dual Link Configuration">
                <header>
                    <button name="get_access_token_info" type="object" string="Refresh Access Token"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_categories" type="object" class="oe_stat_button" icon="fa-list">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="categories_count" readonly="1"/>
                                </span>
                                <span class="o_stat_text">Categories</span>
                            </div>
                        </button>
                        <button name="action_view_products" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="products_count" readonly="1"/>
                                </span>
                                <span class="o_stat_text">Products</span>
                            </div>
                        </button>
                        <button name="action_view_orders" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="orders_count" readonly="1"/>
                                </span>
                                <span class="o_stat_text">Orders</span>
                            </div>
                        </button>
                        <button name="action_view_pos_config" type="object" class="oe_stat_button" icon="fa-laptop">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="cashdesk_count" readonly="1"/>
                                </span>
                                <span class="o_stat_text">Cash Desks</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="username"/>
                            <field name="password"/>
                            <!-- <field name="difference_account"/>
                            <field name="income_account"/>
                            <field name="outcome_account"/> -->
                        </group>
                        <group>
                            <field name="auth_server_url"/>
                            <field name="server_url"/>
                            <field name="business_id"/>
                            <field name="pos_config_id"/>
                            <field name="last_product_sync"/>
                            <field name="get_product_name"></field>
                            <field name="specific_date_orders"></field>
                            <field name="specific_enddate_orders"></field>
                            <field name="get_order_id"/>
                            <field name="is_close_session" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_dual_link_tree" model="ir.ui.view">
        <field name="name">view_dual_link_form.tree</field>
