<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_view_form_dashboard_inherit_hc_leave" model="ir.ui.view">
        <field name="name">hr.leave.view.form.hc.leave</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">confirm,validate,cancel_request,cancel</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button string="Cancel Request" name="cancel_leave_request" type="object"
                        attrs="{'invisible': [('state', 'not in', ['validate'])]}"/>

                <button string="Accept Cancel Request" name="leave_cancel_approve" type="object" groups="hr_holidays.group_hr_holidays_manager"
                        attrs="{'invisible': [('state', 'not in', ['cancel_request'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>
