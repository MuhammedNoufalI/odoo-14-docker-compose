<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inherit_time_off_filter" model="ir.ui.view">
        <field name="name">hr.holidays.filter.search</field>
        <field name="model">hr.leave.report</field>
        <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter_report"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='active_types']" position="after">
                <separator/>
                <filter name="annual_leave" string="Annual Leave"
                        domain="[('holiday_status_id.is_annual_leave', '=', True)]"/>
            </xpath>
        </field>
    </record>
    <record id="act_hr_employee_holiday_annual_leave" model="ir.actions.server">
        <field name="name">Time off Analysis</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave_report"/>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="code">
            action = model.action_time_off_analysis_for_employee()
        </field>
    </record>


    <record id="view_employee_form_inherited" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(hr_holidays.act_hr_employee_holiday_request)d']" position="replace">
                <button name="%(employee_field_changes.act_hr_employee_holiday_annual_leave)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-calendar"
                        attrs="{'invisible': [('show_leaves','=', False)]}"
                        context="{'search_default_employee_id': active_id, 'search_default_annual_leave':1}"
                        groups="base.group_user"
                        help="Remaining Annual leaves">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="allocation_used_display"/>/
                            <field name="allocation_display"/>
                            Days
                        </span>
                        <span class="o_stat_text">
                            Time Off
                        </span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='category_ids']" position="after">
                <group>
                    <field name="hr_employee_type_id" required="True"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='phone']" position="after">
                <field name="personal_contact_no"/>
                <field name="personal_email"/>
            </xpath>
            <xpath expr="//field[@name='tz']" position="after">
                <field name="contract_type"/>
                <field name="personal_email" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="business_unit"/>
            </xpath>
            <xpath expr="//field[@name='bank_account_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='spouse_birthdate']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='marital']" position="replace">
                <field name="marital"/>
            </xpath>
            <xpath expr="//notebook/page[@name='personal_information']/group" position="inside">
                <group string="MOL/OHC Details" name="ohc_details">
                    <field name="mol_id"/>
                    <field name="mol_issue_date"/>
                    <field name="mol_expiry_date"/>
                    <field name="emirate_id_expiry_date"/>
                    <field name="ohc_id"/>
                    <field name="ohc_expiry_date"/>
                    <field name="sponsor_id"/>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Bank Details" name="bank_details">
                    <group>
                        <field name="payment_mode"/>
                        <field name="bank_routing_code"/>
                        <field name="uae_payment_type"/>
                        <field name="agent_id"/>
                        <field name="bank_account_id"/>
                    </group>
                    <group></group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
