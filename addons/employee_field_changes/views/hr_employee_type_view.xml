<odoo>
    <data>
        <!-- ODC Requests Tree View -->
        <record id="hr_employee_type_tree_view" model="ir.ui.view">
            <field name="name">Employee Type</field>
            <field name="model">hr.employee.type</field>
            <field name="arch" type="xml">
                <tree string="Employee Type">
                    <field name="name"/>
                    <field name="sequence_code"/>
                </tree>
            </field>
        </record>

        <!-- ODC Requests Form View -->

        <record id="hr_employee_type_form_view" model="ir.ui.view">
            <field name="name">Employee Type </field>
            <field name="model">hr.employee.type</field>
            <field name="arch" type="xml">
                <form string="ODC Requests">

                    <sheet>
                        <group>
                               <field name="name" required="True"/>
                            <field name="sequence_code" required="True"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        <!--ODC Requests Action -->

        <record id="action_hr_employee_type_view_form" model="ir.actions.act_window">
            <field name="name">Employee Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.type</field>
            <field name="view_id" ref="hr_employee_type_tree_view"/>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_hr_employee_type" name="Employee Type" sequence="1"
			parent="hr.menu_human_resources_configuration" action="action_hr_employee_type_view_form" />
    </data>
</odoo>
