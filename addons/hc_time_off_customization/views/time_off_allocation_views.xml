<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_attendance_holidays_hr_leave_allocation_view_form_inherit" model="ir.ui.view">
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate,expired"/>
            </xpath>

            <xpath expr="//field[@name='holiday_status_id']" position="after">
                <field name="is_applicable_one_time" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>