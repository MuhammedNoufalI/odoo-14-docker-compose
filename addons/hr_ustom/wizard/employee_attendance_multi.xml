<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_attendance_multi_wiz_form" model="ir.ui.view">
            <field name="name">employee.attendance.multi.form</field>
            <field name="model">employee.attendance.multi</field>
            <field name="arch" type="xml">
                <form string="Form">
                    <sheet>
                        <group col="4">
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                        <group>

                            <field name="employee_ids" required="1" />
                        </group>
                        <footer>
                            <button name="assign_multi_emp_attendance" string="Assign" type="object"
                                    class="oe_highlight"/>
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_employee_attendance_multi_wiz_view" model="ir.actions.act_window">
            <field name="name">Employee Attendance Multi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.attendance.multi</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="action_employee_attendance_multi" name="Employee Attendance Multi Assign" parent="gm_hr_custom.attendace_menu_setting" action="action_employee_attendance_multi_wiz_view" sequence="99"/>


    </data>
</odoo>