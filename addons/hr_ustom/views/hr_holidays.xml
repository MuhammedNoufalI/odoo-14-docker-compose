<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_hr_leave_view_form_deduction" model="ir.ui.view">
            <field name="name">view_inherit_hr_leave_view_form_deduction</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='name']" position="before">
                    <field name="emp_attendance_id" attrs="{'invisible':[('emp_attendance_id','=',False)]}" readonly="1"/>
                </xpath>
                
            </field>
        </record>
        <record id="hr_leave_allocation_view_form" model="ir.ui.view">
            <field name="name">hr_leave_allocation_view_form</field>
            <field name="model">hr.leave.allocation</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='allocation_type']" position="before">
                    <field name="emp_attendance_id" attrs="{'invisible':[('emp_attendance_id','=',False)]}" readonly="1"/>
                     <field name="date_from"  attrs="{'required':[('emp_attendance_id','!=',False)],'invisible':[('emp_attendance_id','=',False)]}"/>
                    <field name="date_to"  attrs="{'required':[('emp_attendance_id','!=',False)],'invisible':[('emp_attendance_id','=',False)]}"/>
                </xpath>



            </field>
        </record>
    </data>
</odoo>