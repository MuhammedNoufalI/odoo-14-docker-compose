<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_document_oe_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-foreach='o.order_line']//td[5]" position="replace">
            <td class="text-right">
                <span t-esc="'%.2f'% line.price_unit"/>
<!--                <span t-field="line.price_unit"/>-->
            </td>
        </xpath>
        <xpath expr="//t[@t-foreach='o.order_line']//td[4]" position="replace">
            <td class="text-right">
                <span t-esc="'%.2f'% line.product_qty"/>
<!--                <span t-field="line.product_qty"/>-->
                <span t-field="line.product_uom.name" groups="uom.group_uom"/>
            </td>
        </xpath>
    </template>

    <template id="report_purchasequotation_document_oe_inherit" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//t[@t-foreach='o.order_line']//td[3]" position="replace">
            <td class="text-right">
                <span t-esc="'%.2f'% order_line.product_qty"/>
<!--                <span t-field="order_line.product_qty"/>-->
                <span t-field="order_line.product_uom" groups="uom.group_uom"/>
            </td>
        </xpath>
    </template>

</odoo>
