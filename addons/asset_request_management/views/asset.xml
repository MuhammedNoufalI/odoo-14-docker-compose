<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_view_account_asset_form" model="ir.ui.view">
            <field name="name">view_inherit_view_account_asset_form</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//field[@name='acquisition_date']" position="after">
                    <field name="asset_group_id"/>
                    <field name="location_id"/>
                    <field name="employee_id"/>
                    <field name="assign_state"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>