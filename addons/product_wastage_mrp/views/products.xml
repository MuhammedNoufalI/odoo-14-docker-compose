<odoo>
  <data>
      <!-- Inherit Form View to Modify it -->
      <record id="view_inherit_product_template_form_view" model="ir.ui.view">
          <field name="name">view_inherit_product_template_form_view</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_form_view"/>
          <field name="arch" type="xml">
              
              <!-- position: after|before|replace|attributes|inside -->
              <xpath expr="//field[@name='categ_id']" position="after">
                  <field name="yeild_wastage"/>
              </xpath>
              
          </field>
      </record>

    <!-- Inherit Form View to Modify it -->
      <record id="view_inherit_product_normal_form_view" model="ir.ui.view">
          <field name="name">view_inherit_product_normal_form_view</field>
          <field name="model">product.product</field>
          <field name="inherit_id" ref="product.product_normal_form_view"/>
          <field name="arch" type="xml">

              <!-- position: after|before|replace|attributes|inside -->
              <xpath expr="//field[@name='categ_id']" position="after">
                  <field name="yeild_wastage"/>
              </xpath>

          </field>
      </record>
  </data>
</odoo>