<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_payment_method_view_form" model="ir.ui.view">
            <field name="name">pos.payment.method</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_cash_count']" position="after">
                   <field name="is_bank_count"/>
                   <field name="bank_journal_id" attrs="{'invisible':[('is_bank_count','=',False)],'required':[('is_bank_count','=',True)]}"/>
                   <field name="activate_commission" attrs="{'invisible':[('is_bank_count','=',False)]}"/>
                   <field name="commission_percent" attrs="{'invisible':[('activate_commission','=',False)],'required':[('activate_commission','=',True)]}"/>
                   <field name="commission_account" attrs="{'invisible':[('activate_commission','=',False)],'required':[('activate_commission','=',True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>