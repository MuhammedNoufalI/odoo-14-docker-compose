<odoo>
    <data>
        <template id="print_attendance_report_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <h3 class="text-center">
                        <span t-esc="form.get('start_date')"/>
                        to
                        <span t-esc="form.get('end_date')"/>
                    </h3>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    <strong>ID</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Name</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Present</strong>
                                </th>
<!--                                <th class="text-center">-->
<!--                                    <strong>Total Absent</strong>-->
<!--                                </th>-->
<!--                                <th class="text-center">-->
<!--                                    <strong>Day Off</strong>-->
<!--                                </th>-->
                                <th class="text-center">
                                    <strong>Absences</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Sick Leaves</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Unpaid Leaves</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Parental Leaves</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Bereavement Leaves</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Maternity Leaves</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Annual Leaves</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Total Hours</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="form.get('attendances')" t-as="l">
                                <td class="text-left">
                                    <span t-esc="l.get('id')"/>
                                </td>
                                <td class="text-left">
                                    <span t-esc="l.get('name')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('present')"/>
                                </td>
<!--                                <td class="text-right">-->
<!--                                    <span t-esc="l.get('absent')"/>-->
<!--                                </td>-->
<!--                                <td class="text-right">-->
<!--                                    <span t-esc="l.get('day_off')"/>-->
<!--                                </td>-->
                                <td class="text-right">
                                    <span t-esc="l.get('absences')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('sick_leaves')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('unpaid_absent')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('parental_leave')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('bereavement_leave')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('maternity_leave')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('annual_leave')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.get('total_hours')"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </template>


    </data>
</odoo>
