<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="planning_slot_form_inherit" model="ir.ui.view">
        <field name="name">planning.slot.form.inherit</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_form_in_gantt"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='template_id']" position="replace">
                <field name="template_id" nolabel="1" class="text-break flex-wrap"
                       options="{'horizontal': true}"
                />
            </xpath>


            <xpath expr="//field[@name='allocated_percentage']" position="before">
                    <field name="day_of_week"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                  <attribute name="readonly">1</attribute>
              </xpath>
              <xpath expr="//field[@name='role_id']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
             <xpath expr="//field[@name='allocated_percentage']" position="attributes">
                  <attribute name="readonly">1</attribute>
              </xpath>
             <xpath expr="//field[@name='allocated_hours']" position="attributes">
                  <attribute name="readonly">1</attribute>
              </xpath>
            <xpath expr="//field[@name='start_datetime']" position="attributes">
                  <attribute name="readonly">1</attribute>
              </xpath>
             <xpath expr="//field[@name='end_datetime']" position="attributes">
                  <attribute name="readonly">1</attribute>
              </xpath>
        </field>
    </record>

</odoo>