<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leavers_report_form" model="ir.ui.view">
        <field name="name">hr.leavers.report.form</field>
        <field name="model">hr.leavers.report</field>
        <field name="arch" type="xml">
            <form string="Check Details">
                <group>
                    <field name="from_date"  t-options="{'widget': 'date','format': 'dd-MM-yyyy'}"/>
                    <field name="to_date"  t-options="{'widget': 'date','format': 'dd-MM-yyyy'}"/>
                    <field name="employees" widget="many2many_tags"
                           domain="['&amp;','&amp;','&amp;',
                            ('active','=', False),
                            ('departure_reason', 'in', ['retired', 'fired', 'resigned']),
                            ('departure_date', '&lt;=', to_date),
                            ('departure_date', '&gt;=', from_date)]"
                          />
                </group>
                <footer>
                    <button name="action_print_leavers_report_pdf" string="Print" help="Print Leavers Report" type="object" icon="fa-print" class="btn-primary mr8"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

</odoo>