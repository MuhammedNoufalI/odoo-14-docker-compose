<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="view_requests_status_filter" model="ir.ui.view">
        <field name="name">hr.employee.request.filter</field>
        <field name="model">hr.employee.request.type</field>
        <field name="arch" type="xml">
            <search string="Search Request Type">
                <field name="name" string="Request Types"/>
            </search>
        </field>
    </record>

    <record id="edit_request_type_status_form" model="ir.ui.view">
        <field name="name">hr.employee.request.type.form</field>
        <field name="model">hr.employee.request.type</field>
        <field name="arch" type="xml">
            <form string="Request Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="description" string="Options">
                            <field name="code"/>
                            <field name="type" widget="radio"/>
                            <field name="fixed_amount" string="Fixed Amount" attrs="{'invisible':[('type','!=','fixed_amount')],'required':[('type','=','fixed_amount')]}"/>
                            <field name="active"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                        <group name="validation" string="Validation">
                            <field name="validation_type" widget="radio"/>

                            <field name="double_validation"/>
                            <field name="first_validation_user"  attrs="{'invisible': [('validation_type','!=','users')]}"/>

                            <field name="second_validation_user"  attrs="{'invisible': ['|',('double_validation', '!=', True),('validation_type','!=','users')]}"/>

                            <field name="first_validation_group"  attrs="{'invisible': [('validation_type','!=','groups')]}"/>
                            <field name="second_validation_group"  attrs="{'invisible': ['|',('double_validation', '!=', True),('validation_type','!=','groups')]}"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_request_status_normal_tree" model="ir.ui.view">
        <field name="name">hr.employee.request.type.normal.tree</field>
        <field name="model">hr.employee.request.type</field>
        <field name="arch" type="xml">
            <tree string="Request Type">
                <field name="name"/>
                <field name="code"/>
                <field name="type" widget="radio"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="validation_type" widget="radio"/>
                <field name="double_validation"/>

            </tree>
        </field>
    </record>

    <record id="open_view_request_type_status" model="ir.actions.act_window">
        <field name="name">Request Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.request.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_hr_requests_configuration"
            name="Configuration"
            parent="menu_hr_requests_root"
            sequence="100" groups="hr_employee_request.group_hr_requests_manager"/>

    <menuitem
            id="hr_requests_status_menu_configuration"
            action="open_view_request_type_status"
            name="Request Types"
            groups="hr_employee_request.group_hr_requests_manager"
            parent="menu_hr_requests_configuration"
            sequence="1"/>

</odoo>
