<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_employee_resignation_form_hc_exit" model="ir.ui.view">
            <field name="name">inherit_employee_resignation_form_exit_interview</field>
            <field name="model">hr.resignation</field>
            <field name="inherit_id" ref="hr_resignation.employee_resignation_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button type="object" name="create_exit_interview"
                            string="Create Exit Interview"
                            attrs="{'invisible': ['|','|',('exit_interview_id', '!=', False),('state', '!=', 'approved'),('resignation_type', '=', 'fired')]}"/>
                </xpath>

                <xpath expr="//sheet/div[@class='oe_title']" position="before">
                    <div name="button_box" class="oe_button_box">
                        <button type="action"
                                name="%(hc_clearance_form.hr_clearance_action)d"
                                class="oe_stat_button"
                                icon="fa-file-text" string="Clearance Form"
                                attrs="{'invisible': [('clearance_id', '=', False)]}">
                        </button>
                        <button type="action"
                                name="%(hc_exit_interview_workflow.action_exit_interview_form)d"
                                class="oe_stat_button"
                                icon="fa-file-text" string="Exit Interview Form"
                                attrs="{'invisible': [('exit_interview_id', '=', False)]}">
                        </button>
                    </div>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="exit_interview_id" invisible="1"/>
                </xpath>

            </field>
        </record>
        <record id="inherit_employee_resignation_clearance_form_inherit" model="ir.ui.view">
            <field name="name">inherit_employee_resignation_clearance_form</field>
            <field name="model">hr.resignation</field>
            <field name="inherit_id" ref="hc_clearance_form.inherit_employee_resignation_clearance_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='create_clearance_form']" position="replace">
                    <button name="create_clearance_form" string="Create Clearance" type="object"
                            attrs="{'invisible': ['|',('clearance_id', '!=', False),'|','&amp;','&amp;',('exit_interview_id', '=', False),('state', '=', 'approved'),('resignation_type', '!=', 'fired'),('state', '!=', 'approved')]}"/>
                </xpath>
            </field>
        </record>
         <record id="inherit_employee_resignation_gratuity_form_inherit" model="ir.ui.view">
            <field name="name">inherit_employee_resignation_gratuity</field>
            <field name="model">hr.resignation</field>
            <field name="inherit_id" ref="hr_endofservice_custom.inherit_employee_resignation_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_create_gratuity']" position="replace">
                   <button type="object" name="action_create_gratuity" string="Create Gratuity"
                            attrs="{'invisible': ['|',('gratuity_id', '!=', False),'|','&amp;',('clearance_id', '=', False),('state', '=', 'approved'),('state', '!=', 'approved')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>