            <field name="dpi">90</field>
        </record>
        <report
                id="hr_emp_att_report"
                model="account.move"
                report_type="qweb-pdf"
                string="Employee Attendance Report"
                name="hr_attendance_customization.hr_emp_att_report_tmp_id"
